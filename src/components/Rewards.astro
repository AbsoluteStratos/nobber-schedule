---
import { Icon } from "astro-icon/components"


const rewards_image = "goals.png"
---

<button class="reward-button" id="reward-button">
    <Icon class="moon-icon" name="fa6-solid:award"/>
</button>

<div class="modal-overlay" id="modal-overlay">
  <div class="reward-modal" id="reward-modal" style=`background-image: url('${rewards_image}');`>
  </div>
</div>


<script is:inline>
  const rewardButton = document.getElementById("reward-button");
  const modalOverlay = document.getElementById("modal-overlay");

  rewardButton.addEventListener("click", () => {
    modalOverlay.classList.add("open");
  });

  modalOverlay.addEventListener("click", (e) => {
    if (e.target === modalOverlay) {
      modalOverlay.classList.remove("open");
    }
  });
</script>

<style>
  .reward-button {
    position: absolute;
    top: -2px;
    right: 100px;
    width: 60px;
    height: 140px;
    background: var(--primary-color);
    color: var(--text-primary-color);
    border: 2px solid var(--border-color);
    border-radius: 0 0 8px 8px; /* bookmark shape */
    box-shadow: 0 2px 8px var(--shadow-color);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1100;
    transition: background 0.3s, color 0.3s, height 0.3s;
    writing-mode: sideways-lr;
  }

  @media (max-height: 900px) {
    .reward-button{
        height: 80px;
    }
  }

  .reward-button:hover {
    height: 150px;
  }

  .reward-button svg {
    font-family: var(--font-family);
    font-size: x-large;
    margin-top: auto;
    margin-bottom: 15px;
  }

    /* Modal panel */
   .modal-overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      display: none;
      align-items: center;
      justify-content: center;
      z-index: 2000;
    }

  .modal-overlay.open {
    display: flex;
  }

  /* Center modal */
  .reward-modal {
    border-radius: 12px;
    padding: 24px;
    width: 40em;
    height: 50em;
    max-width: 90%;
    background-size: cover;
    background-repeat:   no-repeat;
    background-position: center center; 
    box-shadow: 0 4px 20px var(--shadow-color);
    animation: scaleIn 0.3s ease forwards;
  }

  @keyframes scaleIn {
    from {
      opacity: 0;
      transform: scale(0.9);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }
</style>