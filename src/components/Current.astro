<button id="scroll-to-current" class="scroll-btn">
  Jump to Current
</button>

<script type="module">
  const btn = document.getElementById("scroll-to-current");

  btn?.addEventListener("click", () => {
    const indicator = document.getElementById("current-time-indicator");
    if (!indicator) return;

    const indicatorPos = indicator.getBoundingClientRect().top + window.scrollY;

    window.scrollTo({
      top: indicatorPos - window.innerHeight / 4,
      behavior: "smooth"
    });
  });
</script>

<style>
  .scroll-btn {
    position: fixed;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    color: var(--text-secondary-color);
    background: var(--primary-color);
    border: none;
    border-radius: 8px;
    padding: 10px 18px;
    font-size: 14px;
    font-weight: bold;
    cursor: pointer;
    box-shadow: 0 2px 8px var(--shadow-color);
    z-index: 1000;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    user-select: none;
    font-family: var(--font-family);
  }

  .scroll-btn:hover {
    transform: translateX(-50%) scale(1.05);
    box-shadow: 0 4px 12px var(--shadow-color);
  }
</style>