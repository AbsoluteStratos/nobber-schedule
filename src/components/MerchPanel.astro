---

const merch_image = "imgs/merch.webp"
---

<div class="sidebar-container">
  <div class="sidebar-panel" id="sidebar-panel">
    <div id="merch-image" style=`background-image: url('${merch_image}');`></div>
    <a href="https://ko-fi.com/ohhnoss/shop" target="_blank" class="store-btn">
      Store
    </a>
  </div>

  <button class="sidebar-toggle" id="sidebar-toggle">
    Merch
  </button>
</div>

<script type="module">
  const toggleBtn = document.getElementById("sidebar-toggle");
  const panel = document.getElementById("sidebar-panel");

  let open = false;

  toggleBtn.addEventListener("click", () => {
    open = !open;
    if (open) {
      panel.classList.add("open");
      toggleBtn.classList.add("open");
    } else {
      panel.classList.remove("open");
      toggleBtn.classList.remove("open");
    }
  });
</script>

<style>
.sidebar-container {
  position: fixed;
  right: 0;
  top: 25%; /* anchor vertically */
  transform: translateY(-75%); /* shift upward so toggle stays ~75% */
  display: flex;
  align-items: flex-start;
  z-index: 1100;
}

/* Panel */
.sidebar-panel {
  position: absolute;
  right: -261px; /* hidden offscreen */
  height: 400px;
  width: 260px;
  background: var(--primary-color);
  border: 2px solid var(--border-color);
  padding: 20px;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 16px;
  transition: transform 0.3s linear;
  border-radius: 0 0 0 12px;
}

.sidebar-panel.open {
  /* right: 0px; /* leaves space for toggle button */
  transform: translateX(-261px);
}

/* Toggle button */
.sidebar-toggle {
  position: relative;
  right: -2px;
  height: 120px;
  width: 62px;
  background: var(--primary-color);
  color: var(--text-primary-color);
  border: 2px solid var(--border-color);
  cursor: pointer;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  border-radius: 8px 0 0 8px;
  transition: transform 0.3s linear;
  user-select: none;
  z-index: -100;
  writing-mode: sideways-lr;
  font-family: var(--font-family);
  font-size: 1.5rem;
}

.sidebar-toggle:hover {
  background: var(--secondary-color);
}

.sidebar-toggle.open {
  transform: translateX(-260px); /* slide with panel */
}

/* Merch image */
#merch-image {
  width: 100%;
  height: 100%;
  border-radius: 12px;
  object-fit: cover;
}

/* Store button */
.store-btn {
  background: var(--accent-color);
  color: white;
  border: none;
  padding: 12px;
  font-size: 1rem;
  font-weight: bold;
  font-family: var(--font-family);
  text-decoration: none;
  text-align: center;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.2s ease;
}
.store-btn:hover {
  box-shadow: 0 0 12px var(--highlight-color);
}
</style>