---
import { Icon } from 'astro-icon/components'

interface Props {
  title: string;
  description: string;
  start: string;
  end: string;
  image?: string;
  index: number;
  players?: string[];
}

const { title, description, start, end, image, index, players = [] } = Astro.props;
---

<div
  class="event-card"
  style={`animation-delay: ${index * 0.05}s;`}
  data-start-time={start}
  data-end-time={end}
>
  <div class="event-content">
    <h2>{title}</h2>
    <p class="time" data-time></p>
    <p class="day" data-day></p>
    <p class="date" data-date></p>
    <p class="description">{description}</p>
  </div>
  {image && (
    <div class="event-image" style={`background-image: url('${image}')`}></div>
  )}

  {players.length > 0 && (
    <div class="players-icon">
      <Icon name="fa6-solid:user" color="var(--text-secondary-color)"></Icon> 
      <div class="tooltip">
        <span class="tooltip-label">Players:</span>
        <span class="tooltip-item">{players.join(", ")}</span>
      </div>
    </div>
  )}
</div>

<style>
  .event-card {
    display: flex;
    align-items: stretch;
    padding: 16px;
    border-radius: 12px;
    border: 2px solid var(--border-color);
    box-shadow: 0 0 8px var(--shadow-color);
    background-color: var(--primary-color);
    background-size: cover;
    background-position: center center;
    color: var(--text-primary-color);
    position: relative;
    /* animation */
    opacity: 0;
    transform: translateX(-30px);
    animation: slideIn 0.6s ease-out forwards;
  }

  @keyframes slideIn {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .event-content {
    flex: 1;
    z-index: 1;
  }

  .event-content h2 {
    margin: 0;
    font-size: 1.2rem;
    color: var(--text-primary-color);
  }

  .event-content .time {
    margin: 4px 0;
    font-weight: bold;
    color: var(--text-secondary-color);
  }

  .event-content .day {
    margin: 4px 0;
    font-size: small;
    color: var(--text-secondary-color);
  }

  .event-content .date {
    margin: 4px 0;
    font-size: small;
    color: var(--text-secondary-color);
  }

  .event-content .description {
    color: var(--text-thirdary-color);
  }

  .event-image {
    flex: 1;
    background-size: cover;
    background-position: center;
    border: 2px solid var(--border-color);
    border-radius: 12px;
  }

  /* Players icon and tooltip */
  .players-icon {
    position: absolute;
    bottom: 10px;
    right: 10px;
    font-size: 1.2rem;
    cursor: pointer;
    z-index: 2;
    height: 50px;
    width: 50px;
    border-radius: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    background-color: var(--primary-color);
    border: 2px solid var(--border-color);
    font-size: 20px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.3);
  }

  .tooltip {
    display: none;
    position: absolute;
    bottom: 120%;
    right: 0;
    background-color: var(--primary-color);
    border: 2px solid var(--border-color);
    color: var(--text-primary-color);
    padding: 8px 12px;
    border-radius: 8px;
    font-size: 0.85rem;
    white-space: nowrap;
    box-shadow: 0 2px 8px rgba(0,0,0,0.3);
  }

  .players-icon:hover .tooltip {
    display: block;
  }

  .tooltip-item {
    margin: 2px 0;
  }

  @media (max-width: 500px) {
    .tooltip{
      max-width: 200px;
      overflow-wrap: break-word; 
    }

    .tooltip-item{
      display: block;
      overflow-wrap: break-word;
      white-space: pre-line; 
    }
  }

  
</style>