---
import { Icon } from 'astro-icon/components'

---

<div class="title-container">
  <h1>Nobathon 2025</h1>

  <nav class="social-links">
    <a href="https://www.twitch.tv/ohhnoss" target="_blank" aria-label="Twitch" class="social-link">
      <Icon name="fa6-brands:twitch" color="var(--text-secondary-color)"></Icon>
    </a>
    <a href="https://www.youtube.com/@ohnob" target="_blank" aria-label="Twitter" class="social-link">
      <Icon name="fa6-brands:youtube" color="var(--text-secondary-color)"></Icon>
    </a>
    <a href="https://x.com/ohhnoss" target="_blank" aria-label="YouTube" class="social-link">
      <Icon name="fa6-brands:twitter" color="var(--text-secondary-color)"></Icon>
    </a>
  </nav>

  <a href="https://ko-fi.com/ohhnoss" target="_blank" class="kofi-button">
    Donate on Ko-fi!
  </a>
</div>

<style>
.title-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 2rem;
  text-align: center;
  gap: 1rem;
  user-select: none;
}

@media (max-width: 900px) {
  .title-container {
    margin-top: 8rem; /* or whatever value you want */
  }
}

.title-container h1 {
  font-size: 5rem;
  margin: 0;
  color: var(--text-primary-color);
  text-shadow: 2px 2px 4px var(--shadow-color);
}

.social-links {
  display: flex;
  gap: 1rem;
  margin-bottom: 1rem;
}

.social-link svg {
  width: 32px;
  height: 32px;
  transition: transform 0.2s, filter 0.2s;
}

.social-link:hover svg {
  transform: scale(1.2);
  filter: drop-shadow(0 0 8px var(--shadow-color));
}

.kofi-button {
  display: inline-block;
  padding: 0.75rem 2rem;
  font-size: 1.25rem;
  color: var(--text-primary-color);
  background-color: var(--primary-color);
  border-radius: 8px;
  border: 3px solid var(--border-color);
  text-decoration: none;
  transition: transform 0.2s, box-shadow 0.2s;
}

.kofi-button:hover {
  transform: scale(1.1);
  box-shadow: 0 0 15px var(--shadow-color);
}
</style>